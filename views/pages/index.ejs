<!DOCTYPE html>
<html>
<head>
	<% include ../partials/header.ejs %>
</head>

<body>
	<div id="init-container" class="container">
		<div  id="login-form" class="panel panel-default" style="display: none;">
			<div class="panel-heading">Online Chat</div>
			<div class="panel-body">
				<form class="form-vertical" role="form">
					<div class="form-group">
						<input id="name-input" type="text" class="form-control" placeholder="Enter your name"/>
					</div>
					<div class="form-group">
						<button id="submit-button" type="button" class="btn btn-success">Enter</button>
					</div>
				</form>
			</div>
		</div>
		<div id="error-panel" class="panel panel-danger" style="display: none;">
			<div class="panel-heading">Error</div>
			<div class="panel-body">Error in connection establishment</div>
		</div>
	</div>
	<div id="chat-container" class="container">
		<div class="panel panel-default">
			<div class="panel-heading">Online Chat<span id="username"></span></div>
			<div class="panel-body">
    			<div class="col-sm-10 messages-wrapper">
    				<div id="messages-list">
					</div>
					<div class="message-input-wrapper">
						<textarea id="message-input" type="text" class="form-control"></textarea>
						<button id="send-button" type="button" class="btn btn-success" >Send</button>
					</div>
    			</div>
				<div id="users-list-panel" class="col-sm-2">
					<div class="panel panel-default">
						<div class="panel-heading">Users List</div>
						<div id="users-list" class="panel-body"></div>
					</div>
				</div>
			</div>
		</div>
	</div>	
</body>
</html>
